{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string",
            "metadata": {
                "description": "Used as as prefix for naming conventions."
            }
        },
        "uriBase": {
            "type": "string",
            "metadata": {
                "description": "Base Uri for template links"
            },
            "defaultValue": "https://raw.githubusercontent.com/mhenderson442/mercury-iot/master/templates/"
        }
    },
    "functions": [],
    "variables": {
        "hubDeploymentName": "[concat(parameters('prefix'),'HubDeploymentTemplate')]",
        "vnetDeploymentName": "[concat(parameters('prefix'),'VnetDeploymentTemplate')]",
        "cosmosDeploymentName": "[concat(parameters('prefix'),'CosmosDeploymentTemplate')]",
        "hubDeploymentTemplateLink": "[concat(parameters('uriBase'),'iot-hub/iot-hub-template.json')]",
        "hubDeploymentTemplateParametersLink": "[concat(parameters('uriBase'),'iot-hub/iot-hub-template.parameters.json')]",
        "cosmosDeploymentTemplateLink": "[concat(parameters('uriBase'),'cosmos-db/cosmos-db-template.json')]",
        "cosmosDeploymentTemplateParametersLink": "[concat(parameters('uriBase'),'cosmos-db/cosmos-db-template.parameters.json')]",
        "vnetDeploymentNameTemplateLink": "[concat(parameters('uriBase'),'virtual-network/mercury-iot-vnet-template.json')]",
        "vnetDeploymentNameParametersTemplateLink": "[concat(parameters('uriBase'),'virtual-network/mercury-iot-vnet-template.parameters.json')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[variables('hubDeploymentName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('hubDeploymentTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('hubDeploymentTemplateParametersLink')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[variables('cosmosDeploymentName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('cosmosDeploymentTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('cosmosDeploymentTemplateParametersLink')]",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[variables('vnetDeploymentName')]",
            "properties": {
                 "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('vnetDeploymentNameTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "[variables('vnetDeploymentNameParametersTemplateLink')]",
                    "contentVersion": "1.0.0.0"
                }               
            }
        }  
    ],
    "outputs": {
        "output1": {
            "type": "string",
            "value": "value"
        }
    }
}