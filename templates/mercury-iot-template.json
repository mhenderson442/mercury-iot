{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "prefix": {
            "type": "string",
            "metadata": {
                "description": "Used as as prefix for naming conventions."
            }
        }
    },
    "functions": [],
    "variables": {
        "hubDemploymentName": "[concat(parameters('prefix'),'HubDepoymentTemplate')]",
        "cosmosDeploymentName": "[concat(parameters('prefix'),'CosmosDepoymentTemplate')]"
    },
    "resources": [
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[variables('hubDemploymentName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/mhenderson442/mercury-iot/master/templates/iot-hub/iot-hub-template.json",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/mhenderson442/mercury-iot/master/templates/iot-hub/iot-hub-template.parameters.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2020-06-01",
            "name": "[variables('cosmosDeploymentName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/mhenderson442/mercury-iot/master/templates/cosmos-db/cosmos-db-template.json",
                    "contentVersion": "1.0.0.0"
                },
                "parametersLink": {
                    "uri": "https://raw.githubusercontent.com/mhenderson442/mercury-iot/master/templates/cosmos-db/cosmos-db-template.parameters.json",
                    "contentVersion": "1.0.0.0"
                }
            }
        }
    ],
    "outputs": {
        "output1": {
            "type": "string",
            "value": "value"
        }
    }
}